<% @photos.each do |photo| %>
  <div class="col-auto mb-2">
    <div class="card thumb-card">
      <%= link_to photo, class: 'card p-0 shadow-sm' do %>
        <%= image_tag photo.image.variant(:thumb), class: 'card-img-top', alt: photo.title %>
        <div class='card-body px'>
          <h5 class='card-title text-center'><%= photo.title %></h5>
        </div>
      <% end %>
    </div>    
  </div>
<% end %>
